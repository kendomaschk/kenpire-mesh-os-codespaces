{
  "name": "KenPire Mesh OS Development Environment",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-python.mypy-type-checker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "ms-vscode.docker",
        "github.copilot",
        "github.copilot-chat",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode.makefile-tools",
        "ms-vscode-remote.remote-containers",
        "ms-toolsai.jupyter",
        "ms-toolsai.vscode-jupyter-cell-tags"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python3",
        "python.formatting.provider": "none",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.linting.flake8Enabled": true,
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "python.testing.nosetestsEnabled": false,
        "[python]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "ms-python.black-formatter"
        },
        "files.exclude": {
          "**/__pycache__": true,
          "**/.pytest_cache": true,
          "**/*.pyc": true
        },
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "postCreateCommand": "pip install -r requirements.txt && pip install -e .[dev] && echo 'KenPire Mesh OS development environment ready!'",
  "remoteUser": "vscode",
  "forwardPorts": [8080, 5000, 3000, 9090, 6379],
  "portsAttributes": {
    "8080": {
      "label": "KenPire API Server",
      "onAutoForward": "notify"
    },
    "5000": {
      "label": "Development Server",
      "onAutoForward": "silent"
    },
    "3000": {
      "label": "Grafana Dashboard",
      "onAutoForward": "silent"
    },
    "9090": {
      "label": "Prometheus Metrics",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis Server",
      "onAutoForward": "silent"
    }
  },
  "containerEnv": {
    "ENVIRONMENT": "development",
    "LOG_LEVEL": "DEBUG",
    "PYTHONPATH": "/workspace/src"
  },
  "mounts": [
    "source=kenpire-vscode-extensions,target=/home/vscode/.vscode-server/extensions,type=volume"
  ]
}